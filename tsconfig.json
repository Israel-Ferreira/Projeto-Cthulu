{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "typeRoots": [
            "../node_modules/@types",
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts",
        "spec/*.ts"
